{
  "openapi": "3.0.0",
  "info": {
    "title": "This will be the name of the workflow",
    "description": "Description will be derived from workflow metadata.",
    "version": "Wed Oct 18 14:26:19 CEST 2017 (last modification date)",
    "contact": {
      "name": "thor (last editor)"
    }
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Workflow metadata",
        "responses": {
          "200": {
            "description": "Show metadata of the workflow",
            "content": {
              "application/vnd.mason+json": {
                "schema": {
                  "$ref": "#/components/schemas/Workflow"
                }
              }
            }
          }
        }
      }
    },
    "/:job-pool": {
      "post": {
        "summary": "Executes a job from the workflow",
        "operationId": "executeJob",
        "requestBody": {
          "description": "Simple input parameters for the job",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InputParameters"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Status and result of the job",
            "content": {
              "application/vnd.mason+json": {
                "schema": {
                  "$ref": "#/components/schemas/Job"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Workflow": {
        "properties": {
          "path": {
            "type": "string"
          },
          "owner": {
            "type": "string"
          }
        }
      },
      "InputParameters": {
        "$ref": "./input-parameters.json"
      },
      "Job": {
        "properties": {
          "id": {
            "type": "string"
          },
          "inputParameters": {
            "$ref": "#/components/schemas/InputParameters"
          }
        }
      }
    }
  }
}